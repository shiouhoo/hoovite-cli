{
    "name": "create-hoo-vite",
    "version": "1.1.0",
    "description": "基于vite的项目模板",
    "main": "index.js",
    "scripts": {
        "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
        "build": "rollup -c",
        "r": "node ./lib/index",
        "dev": "rollup -c && node ./lib/index",
        "prepare": "husky install"
    },
    "keywords": [
        "vite",
        "脚手架"
    ],
    "type": "module",
    "author": "shiouhoo",
    "license": "MIT",
    "bin": {
        "create-hoo-vite": "./lib/index.js"
    },
    "files": [
        "src/template/*",
        "lib"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/shiouhoo/hoovite-cli.git"
    },
    "bugs": {
        "url": "https://github.com/shiouhoo/hoovite-cli/issues"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.6.7",
        "@commitlint/config-conventional": "^17.6.7",
        "@rollup/plugin-commonjs": "^25.0.7",
        "@rollup/plugin-terser": "^0.4.4",
        "@shiouhoo/eslint-config": "^1.0.10",
        "@types/node": "^20.8.7",
        "@typescript-eslint/eslint-plugin": "^6.8.0",
        "@typescript-eslint/parser": "^6.8.0",
        "commitizen": "^4.3.0",
        "cz-git": "^1.7.0",
        "lint-staged": "^13.2.3",
        "husky": "^8.0.3",
        "eslint": "^8.52.0",
        "inquirer": "^9.2.8",
        "minimist": "^1.2.8",
        "rollup": "^4.1.4",
        "rollup-plugin-typescript2": "^0.36.0",
        "spinner": "^0.3.4",
        "typescript": "^5.2.2"
    },
    "config": {
        "commitizen": {
            "path": "node_modules/cz-git"
        }
    },
    "lint-staged": {
        "*.{js,ts,vue}": "eslint --fix"
    }
}